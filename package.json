{
  "name": "MERN-Heroku-Starter-Kit",
  "version": "1.0.0",
  "description": "MERN Heroku Starter Kit",
  "main": "server/index.js",
  "author": {
    "name": "Nataliia Baikina",
    "email": "natalinyweb@hotmail.com",
    "url": "https://github.com/Naterra"
  },
  "engines": {
    "node": "9.0.0",
    "npm": "5.5.1"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prod:compile_server": "babel server -d dist --presets es2015,stage-1",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --exec   babel-node server/index.js",
    "client": "npm run start --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "mongoose": "^4.13.6"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "nodemon": "^1.12.5"
  }
}
